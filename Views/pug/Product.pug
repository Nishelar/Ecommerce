extends layouts/main-layouts.pug
    
block content
    main
        if prod.length>0
            h1 My Products
                .grid
                    each products in prod
                        article.card.product.item
                            header.card-header
                               h1.product-title #{products.title}
                            div.card__image
                              img(src="https://encrypted-tbn3.gstatic.com/shopping?q=tbn:ANd9GcTGHUUwAoKctiEhkrABxcF7FUU1M3b6gvEoRZAwBO48sGmL7tJpfKnDWntBJBb81kjrbNmv3Ro1gw&usqp=CAc",alt="image")    
                            div.card__content
                              h2.product__price $19.99
                              p.product__description A very interesting book about so many even more interesting things!
                            .card__actions
                              button.btn Add to Cart
        else
            h1 No Products               
    
    